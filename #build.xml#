<?xml version="1.0" encoding="utf-8"?>
<project name="videojuegosdb" default="videojuegosdb.jar" basedir="."
	 xmlns:fx="javafx:com.sun.javafx.tools.ant">
  
  <property name="build.dir" value="build" />
  <property name="src.dir"   value="src" />
  <property name="lib.dir"   value="lib" />
  <property name="doc.dir"   value="doc" />

<target name="videojuegosdb.jar" depends="compile">
    <taskdef uri="javafx:com.sun.javafx.tools.ant" classpath="${javafx.lib.ant-javafx.jar}"/>
    <fx:jar destfile="/videojuegosdb.jar">
      <fx:application name="VideojuegoDB"
		      mainClass="/src/videojuegosdb/controlador/VideojuegosDBMain"/>
      <fx:resources>
        <fx:fileset dir="${build.dir}" includes="${lib.dir}/*"/>
      </fx:resources>
    </fx:jar> 
</target>        
  
  <target name="compile">
    <mkdir dir="${build.dir}"/>
    <javac srcdir="${src.dir}"
	   destdir="${build.dir}"
	   debug="true"
	   debuglevel="lines,vars,source"
	   includeantruntime="false"
	   deprecation="true"
	   nowarn="off">
      <classpath>
	<fileset dir="${lib.dir}">
	  <include name="*.jar"/>
	</fileset>
      </classpath>
      <compilerarg value="-Xlint:unchecked"/>
    </javac>
  </target>

   <target name="doc" depends="videojuegosdb.jar">
    <mkdir dir="${doc.dir}"/>
    <javadoc packagenames="videojuegosdb.*"
             sourcepath="src"
             defaultexcludes="yes"
             destdir="${doc.dir}"
             author="false"
             version="false"
             use="true"
             windowtitle="videojuegosdb">
      <doctitle><![CDATA[<h1>Proyecto1</h1>]]></doctitle>
      <link href="http://docs.oracle.com/javase/8/docs/api/" />
      <classpath>
	<pathelement location="${lib.dir}/junit.jar" />
	<pathelement location="${lib.dir}/hamcrest-core.jar" />
      </classpath>
    </javadoc>
   </target>

   <target name="clean">
     <delete file="videojuegosdb.jar"/>
     <delete dir="${build.dir}"/>
     <delete dir="${doc.dir}"/>
   </target>
   
   <target name="test" depends="videojuegosdb.jar">
     <junit printsummary="yes" haltonfailure="no">
       <formatter type="plain" usefile="false" />
       <classpath>
	 <pathelement path="${build.dir}" />
	 <pathelement location="${lib.dir}/junit.jar" />
	 <pathelement location="${lib.dir}/hamcrest-core.jar" />
       </classpath>
       <batchtest fork="yes">
	 <fileset dir="${src.dir}">
	   <include name="**/*Test*.java" />
	 </fileset>
       </batchtest>
     </junit>
   </target>
   
</project>
